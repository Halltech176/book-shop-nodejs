        <%- include('../includes/navigation.ejs') %>
        <main> 
            <% if(orders.length <= 0) { %>
            <h1>Nothing there!</h1>
            <% } else { %> 
                <ul>
                    <% orders.forEach((order) => { %>
                                <li>
                            <h1> # <%= order._id %> </h1>
                            <ul>
                            <% order.products.forEach((item) => { %>
                                <li>
                             <%= item.product.title%> 
                         
                             
                                    
                                </li>
                                <li>    <%= item.product.price%> </li>
                                <li><%= item.product.description%>     </li> 
                              
                    <% }) %>
                </ul>
                <a href='invoice/<%= order._id %>'>Invoice</a>
                                </li>
                    <% }) %>
                 
                </ul>
                <% }%>
        </main>
